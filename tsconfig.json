{
    "compilerOptions": {
        "noEmitOnError": true,
        "noEmitHelpers": true,
        "sourceMap": false,
        "removeComments": true,
        "declaration": false,
        "experimentalDecorators": true,
        "target": "ES2017",
        "module": "esnext",
        "moduleResolution": "node",
        "outDir": "bin/dist",
        "lib": ["es6", "dom"],
        "skipLibCheck": true,
		"skipDefaultLibCheck": true,
        "rootDir": ".",
        "baseUrl": ".",
        "types": [
            "node"
        ],
        "paths": {
            "*": [
            "./node_modules/*"
            ]
        }
    },
    "exclude": [
        "node_modules", 
        "demo", 
        "demo-ng", 
        "bin"
    ]
}